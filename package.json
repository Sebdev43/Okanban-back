{
  "name": "okanban",
  "version": "1.0.0",
  "description": "## Description du projet",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "db:create-role": "psql -U postgres -c \"CREATE ROLE okanban WITH LOGIN PASSWORD 'okanban'\" || echo 'Role already exists'",
    "db:create-db": "psql -U postgres -c \"CREATE DATABASE okanban OWNER okanban\"",
    "db:create": "npm run db:create-role && npm run db:create-db",
    "db:tables": "psql -U okanban -d okanban -f ./data/create_tables.sql",
    "db:seed": "psql -U okanban -d okanban -f ./data/seeding.sql",
    "db:setup": "npm run db:create && npm run db:tables && npm run db:seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-session-sequelize": "^7.1.7",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "email-validator": "^2.0.4",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "joi": "^17.13.3",
    "pg": "^8.11.5",
    "sequelize": "^6.37.3"
  }
}
